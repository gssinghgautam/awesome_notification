<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/lato_bold"
            android:maxLines="2"
            android:textColor="#2b2b2b"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            tools:text="Urgent! Make Payment to SAVE ₹150"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/small_image"
            android:layout_width="@dimen/order_dropoff_title_image"
            android:layout_height="@dimen/order_dropoff_title_image"
            android:adjustViewBounds="true"
            tools:src="@drawable/ic_launcher" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEFF0"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_8">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="@dimen/order_dropoff_top_image"
            android:layout_height="@dimen/order_dropoff_top_image"
            tools:src="@drawable/baby" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_card_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:maxLines="3"
                android:textAllCaps="true"
                android:textColor="#fb206a"
                android:textSize="@dimen/sp_12"
                tools:text="You are one step away from saving ₹150" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEFF0"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_4"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_4">

        <ImageView
            android:id="@+id/iv_trust_badge"
            android:layout_width="@dimen/order_dropoff_trust_badge"
            android:layout_height="@dimen/order_dropoff_trust_badge"
            android:src="@drawable/trust_badge" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_8">

            <TextView
                android:id="@+id/tv_trust_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:fontFamily="@font/lato_bold"
                android:includeFontPadding="false"
                android:text="@string/trust_title"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_trust_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/lato_regular"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="@string/money_back"
                android:textColor="#606060"
                android:textSize="@dimen/sp_10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cta_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_cta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_round_pink_light"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_8"
                android:paddingRight="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_8">

                <TextView
                    android:id="@+id/tv_cta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0sp"
                    android:maxLines="2"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    tools:text="Add Address Now" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_payments_methods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/pay_via"
                    android:textColor="#606060"
                    android:textSize="@dimen/sp_10" />

                <ImageView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/payment_methods" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>